{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "outDir": "./x",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [ "dom", "es2020" ],
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules"],
  "include": ["./*.ts", "./*.tsx", "stories"]
}