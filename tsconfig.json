{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "outDir": "./x",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [ "dom", "es2020" ],
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "paths": {
      "xroute": ["./index.ts"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["./*.ts", "./docs/*.tsx", "./docs/*.ts", "./*.tsx", "stories", "docs/routeDefinition.ts"]
}